        $("#mySearchBoxE").keyup(function () {
            var rules = [],
                postData = grid.jqGrid("getGridParam", "postData"),
                colModel = grid.jqGrid("getGridParam", "colModel"),
                searchText = $("#mySearchBoxE").val(),
                l = colModel.length;

            for (var i = 0; i < l; i++) {
