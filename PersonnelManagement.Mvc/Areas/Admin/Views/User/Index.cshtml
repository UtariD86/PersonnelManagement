        });

        $("#mySearchBoxS").keyup(function () {
            var rules = [],
                postData = grid.jqGrid("getGridParam", "postData"),
                colModel = grid.jqGrid("getGridParam", "colModel"),
                searchText = $("#mySearchBoxS").val(),
                l = colModel.length;

            for (var i = 0; i < l; i++) {
